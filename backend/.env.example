# Configuración del servidor
PORT=3001
NODE_ENV=production

# Base de datos PostgreSQL
# Railway proveerá estas variables automáticamente cuando añadas PostgreSQL
DB_HOST=<railway_postgres_host>
DB_PORT=5432
DB_USER=<railway_postgres_user>
DB_PASSWORD=<railway_postgres_password>
DB_NAME=<railway_postgres_database>

# Autenticación JWT
JWT_SECRET=<tu_jwt_secret_seguro_aqui>
JWT_EXPIRES_IN=7d

# Cloudinary (para subida de imágenes)
CLOUDINARY_CLOUD_NAME=<tu_cloudinary_cloud_name>
CLOUDINARY_API_KEY=<tu_cloudinary_api_key>
CLOUDINARY_API_SECRET=<tu_cloudinary_api_secret>

# CORS - URL del Frontend en Netlify
FRONTEND_URL=<tu_url_de_netlify_aqui>
